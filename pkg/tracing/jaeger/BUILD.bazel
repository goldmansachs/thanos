load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "jaeger",
    srcs = [
        "config_yaml.go",
        "jaeger.go",
        "remote.go",
    ],
    importpath = "github.com/prometheus/common/pkg/tracing/jaeger",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/tracing/migration:go_default_library",
        "@com_github_go_kit_log//:log",
        "@com_github_go_kit_log//level",
        "@in_gopkg_yaml_v2//:yaml_v2",
        "@io_opentelemetry_go_contrib_samplers_jaegerremote//:jaegerremote",
        "@io_opentelemetry_go_otel//attribute",
        "@io_opentelemetry_go_otel//semconv/v1.7.0:v1_7_0",
        "@io_opentelemetry_go_otel_exporters_jaeger//:jaeger",
        "@io_opentelemetry_go_otel_sdk//resource",
        "@io_opentelemetry_go_otel_sdk//trace",
        "@io_opentelemetry_go_otel_trace//:trace",
    ],
)

alias(
    name = "go_default_library",
    actual = ":jaeger",
    visibility = ["//visibility:public"],
)

go_test(
    name = "jaeger_test",
    srcs = ["jaeger_test.go"],
    embed = [":jaeger"],
    deps = [
        "//pkg/tracing:go_default_library",
        "//pkg/tracing/migration:go_default_library",
        "@com_github_go_kit_log//:log",
        "@com_github_opentracing_opentracing_go//:opentracing-go",
        "@io_opentelemetry_go_otel//attribute",
        "@io_opentelemetry_go_otel_sdk//trace",
        "@io_opentelemetry_go_otel_sdk//trace/tracetest",
    ],
)
