load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "otlp",
    srcs = [
        "config_yaml.go",
        "otlp.go",
    ],
    importpath = "github.com/thanos-io/thanos/pkg/tracing/otlp",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/exthttp",
        "//pkg/tracing/migration",
        "@com_github_go_kit_log//:log",
        "@com_github_go_kit_log//level",
